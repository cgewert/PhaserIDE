<UserControl x:Class="PhaserIDE.Views.NewView"  
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"   
             xmlns:views="clr-namespace:PhaserIDE.Views"   
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:PhaserIDE.Controls">
    <UserControl.Resources>
        <SolidColorBrush x:Key="ErrorBrush" Color="#E53935"/>   <!-- Material Red 600 -->
        <SolidColorBrush x:Key="SuccessBrush" Color="#43A047"/> <!-- Material Green 600 -->
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Console Output -->
            <controls:Console 
                Grid.Row="0"
                Grid.Column="0"
                FontSize="16"
                IsConsoleSingleton="True"
                Margin="0 0 0 50"
                x:Name="PhaserConsole"
            />  
            <!-- Projektname -->
            <TextBox x:Name="ProjectNameBox"  
                     Grid.Row="1"
                     Grid.Column="0"
                     materialDesign:HintAssist.Hint="Project name"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Height="60"
                     Margin="0,0,0,20"
                     FontSize="16" />

            <!-- Zielordner -->
            <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,20">
                <TextBox x:Name="TargetFolderBox"  
                         materialDesign:HintAssist.Hint="Target folder"  
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"  
                         FontSize="16"
                         Width="300"
                         Height="60"
                         IsReadOnly="True" />
                <Button Content="Select folder"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Height="60"
                        Margin="20,0,0,0"  
                        Click="OnBrowseFolder"/>
            </StackPanel>

            <!-- Phaser-Version (optional) -->
            <ComboBox x:Name="PhaserVersionBox"  
                      Grid.Row="3"
                      Grid.Column="0"
                      materialDesign:HintAssist.Hint="Phaser version"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"  
                      FontSize="16"  
                      Width="200"  
                      Margin="0,0,0,20"
                      HorizontalAlignment="Left">
                <ComboBoxItem Content="3.88" IsSelected="True"/>
                <ComboBoxItem Content="3.60"/>
                <ComboBoxItem Content="Latest"/>
            </ComboBox>

            <!-- Projekt anlegen -->
            <Button Content="Create Project"  
                    Grid.Row="4"
                    Grid.Column="0"
                    Style="{StaticResource MaterialDesignRaisedButton}"  
                    materialDesign:ButtonAssist.CornerRadius="10"  
                    Background="{DynamicResource PrimaryHueMidBrush}"
                    Foreground="{DynamicResource MaterialDesignBody}"
                    FontSize="18"  
                    Click="OnCreateProject"/>

            <!-- Output / Status -->
            <TextBlock x:Name="StatusBlock"
                       Grid.Row="5"
                       Grid.Column="0"
                       Margin="0,20,0,20"
                       FontSize="18"
                       ToolTip="{Binding HasErrors}">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasError}" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource ErrorBrush}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ProjectCreatedSuccessfully}" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource SuccessBrush}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <ScrollViewer Grid.Row="6" Grid.Column="0">
                <StackPanel 
                    x:Name="PlaceholderPanel"
                    Orientation="Vertical"
                    Margin="16"
                    materialDesign:ColorZoneAssist.Mode="PrimaryDark" />
            </ScrollViewer>
        </Grid>
    </ScrollViewer>
</UserControl>
