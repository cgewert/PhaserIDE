<Window x:Class="PhaserIDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="PHASER IDE" 
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <!-- Haupt-Layout mit Navigation und Content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Panel -->
        <Border Grid.Column="0" 
                Background="{DynamicResource MaterialDesignToolBarBackground}"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="0,0,1,0">
            <StackPanel Margin="10">

                <TextBlock Text="Navigation" 
                          FontSize="18" 
                          FontWeight="Bold"
                          Margin="10,10,10,20"
                          Foreground="{DynamicResource MaterialDesignBody}"/>

                <!-- Navigation Menu -->
                
                <ListBox x:Name="NavigationMenu" 
                         Background="Transparent"
                         SelectionChanged="NavigationMenu_SelectionChanged"
                         BorderThickness="0">

                    <ListBoxItem x:Name="Home">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <materialDesign:PackIcon Kind="Home" 
                                                   Width="20" Height="20" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>
                            <TextBlock Text="Home" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="Browser">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <materialDesign:PackIcon Kind="Web" 
                               Width="20" Height="20" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                            <TextBlock Text="Browser" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="Editor">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <materialDesign:PackIcon Kind="EditBox" 
                               Width="20" Height="20" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                            <TextBlock Text="Code" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="New" ToolTip="Create new Phaser projects">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <materialDesign:PackIcon Kind="NewBox" 
                                                   Width="20" Height="20" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>
                            <TextBlock Text="New" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="Projects">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <materialDesign:PackIcon Kind="Folder" 
                                                   Width="20" Height="20" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>
                            <TextBlock Text="Projects" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="Settings">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <materialDesign:PackIcon Kind="Settings" 
                                                   Width="20" Height="20" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>
                            <TextBlock Text="Settings" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                </ListBox>

                <!-- Spacer -->
                <Border Height="20"/>

                <!-- Additional Action Button -->
                <Button x:Name="ActionButton"
                        Content="NEUE AKTION"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Background="{DynamicResource PrimaryHueMidBrush}"
                        Click="ActionButton_Click"/>

            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Bar -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource MaterialDesignToolBarBackground}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="0,0,0,1"
                    Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="PageTitle" 
                              Text="Home" 
                              FontSize="22" 
                              FontWeight="Bold"
                              VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <!-- Search Box -->
                        <TextBox x:Name="SearchBox"
                                materialDesign:HintAssist.Hint="Suchen..."
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Width="200"
                                Margin="10,0"/>

                        <!-- User Profile Button -->
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                Margin="10,0,0,0">
                            <materialDesign:PackIcon Kind="Account" Width="24" Height="24"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Dynamic Content Container -->
            <Border Grid.Row="1" 
                    Background="{DynamicResource MaterialDesignBackground}"
                    Margin="0">
                <ContentPresenter x:Name="MainContentPresenter" 
                                Content="{Binding CurrentView}"
                                Margin="20"/>
            </Border>

        </Grid>

    </Grid>
</Window>